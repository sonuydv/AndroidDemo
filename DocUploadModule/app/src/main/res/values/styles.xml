<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/MyButton</item>
    </style>


    //Style for Custom Dialog
    <style name="NoTitleDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@color/axis_color_light</item>
        <item name="backgroundColor">@color/axis_color_light</item>
    </style>

<!--    Style for Apps Button-->
    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/axis_color_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTextView" parent="Widget.AppCompat.TextView">
        <item name="background">@color/axis_color_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyHeadingAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/axis_color_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heading_view_height</item>
    </style>


</resources>